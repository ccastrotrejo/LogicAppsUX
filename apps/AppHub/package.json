{
  "name": "apphub",
  "version": "1.0.0",
  "description": "Microsoft AppHub - A Figma-like interface for hosting Logic Apps locally",
  "main": "dist/main/main.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:main\" \"npm run dev:renderer\"",
    "dev:main": "tsc -p tsconfig.main.json && electron dist/main/main.js --dev",
    "dev:renderer": "vite",
    "build": "npm run build:main && npm run build:renderer",
    "build:main": "tsc -p tsconfig.main.json",
    "build:renderer": "vite build",
    "start": "electron dist/main/main.js",
    "pack": "electron-builder",
    "dist": "electron-builder --publish=never"
  },
  "devDependencies": {
    "@types/node": "^20.12.7",
    "@types/react": "18.3.0",
    "@types/react-dom": "18.3.0",
    "@vitejs/plugin-react": "^4.4.6",
    "concurrently": "^8.2.2",
    "electron": "^32.0.0",
    "electron-builder": "^25.0.0",
    "typescript": "5.7.2",
    "vite": "^5.4.19"
  },
  "dependencies": {
    "@fluentui/react-components": "^9.54.20",
    "@fluentui/react-icons": "^2.0.266",
    "react": "18.3.1",
    "react-dom": "18.3.1"
  },
  "build": {
    "appId": "com.microsoft.apphub",
    "productName": "AppHub",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "node_modules/**/*"
    ],
    "mac": {
      "category": "public.app-category.developer-tools"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}